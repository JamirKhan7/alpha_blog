<div class="row">
  <% @categories.each do |category| %>
    <div class="col-sm-4 mb-4">
      <div class="card shadow rounded h-100">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to category.name, category_path(category), class: "link-underline-light" %>
          </h5>
          <div class="text-body-secondary">
            <div><%= pluralize(category.articles.count, "article") %></div>
            <div class="mt-4">
              <small>
                Created <%= time_ago_in_words(category.created_at) %> ago,
                Updated <%= time_ago_in_words(category.updated_at) %> ago
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
