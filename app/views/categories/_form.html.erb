<div class="row">
  <%= form_with(model: @category, local: true, data: { turbo: false }, class: "col-md-7 col-lg-8") do |f| %>
    <%= render partial: "shared/errors", locals: { obj: @category } %>

    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="d-flex justify-content-end">
      <%= link_to "Cancel", cancel_url, class: "btn btn-outline-secondary" %>
      <%= f.submit class: "btn btn-primary ms-2" %>
    </div>
  <% end %>
</div>
