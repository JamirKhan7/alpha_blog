<div class="row">
  <%= form_with(model: @category, local: true, data: { turbo: false }, class: "col-md-7 col-lg-8") do |f| %>
    <%= render partial: "shared/errors", locals: { obj: @category } %>

    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<p class="mt-3"><%= link_to "Return to articles list", articles_path %></p>
