<div class="row">
  <%= form_with(model: @article, local: true, data: { turbo: false }, class: "col-md-7 col-lg-8") do |f| %>
    <%= render partial: "shared/errors", locals: { obj: @article } %>

    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, rows: 10, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :categories, class: "form-label" %>
      <%= f.collection_select :category_ids,
            Category.all, :id, :name,
            { prompt: "Select Categories"},
            { class: "form-select", multiple: true } %>
    </div>

    <div class="d-flex justify-content-end">
      <%= link_to "Cancel", cancel_url, class: "btn btn-outline-secondary"%>
      <%= f.submit class: "btn btn-primary ms-2" %>
    </div>
  <% end %>
</div>
